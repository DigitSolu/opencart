{{ header }}
<div id="account-deleting" class="container">
	<ul class="breadcrumb">
		{% for breadcrumb in breadcrumbs %}
		<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		{% endfor %}
	</ul>
	{% if error_warning %}
	<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
	{% endif %}
	<div class="row">{{ column_left }}
		{% if column_left and column_right %}
		{% set class = 'col-sm-6' %}
		{% elseif column_left or column_right %}
		{% set class = 'col-sm-9' %}
		{% else %}
		{% set class = 'col-sm-12' %}
		{% endif %}
		<div id="content" class="{{ class }}">{{ content_top }}
			<h1>{{ heading_title }}</h1>
			<p>{% if content %}{{ content }}{% else %}{{ text_description_delete }}{% endif %}</p>
			<form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
				<div class="buttons">
					<input type="submit" value="{{ button_delete }}" class="btn btn-danger" /> 
					  &nbsp;
					<a href="{{ back }}" class="btn btn-default">{{ button_back }}</a>
				</div>
			</form>
			{{ content_bottom }}</div>
		{{ column_right }}</div>
</div>
{{ footer }}
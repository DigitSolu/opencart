<div id="header" >	
	
	<header class="scroll-fix ">
		<div class="header-middle">	
			<div class="container">
				<div class="box-inner">
					<div class="box-inner-inner">
						<ul class="box-links">
							<li class="currency">
							{% if header_currency %}
							  {{ currency }}
							{% endif %}
							</li>
							<li class="language">
							{{ language }}
							</li>
							<li id="top-links" class="nav header-dropdown">
							  <ul class="list-inline">
								<li class="dropdown"><a href="{{ account }}" title="{{ text_account }}" class="dropdown-toggle" data-toggle="dropdown"><i class="ion-android-person icons"></i> <span class="hidden-xs">{{ text_account }}</span> <i class="icon-right ion-ios-arrow-down"></i></a>
								  <ul class="dropdown-menu dropdown-menu-right pt-account">
									{% if logged %}
									<li><a href="{{ account }}">{{ text_account }}</a></li>
									<li><a href="{{ order }}">{{ text_order }}</a></li>
									<li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
									<li><a href="{{ download }}">{{ text_download }}</a></li>
									<li><a id="pt-logout-link" href="{{ logout }}">{{ text_logout }}</a></li>
									{% else %}
									<li><a id="pt-register-link" href="{{ register }}">{{ text_register }}</a></li>
									<li><a id="pt-login-link" href="{{ login }}">{{ text_login }}</a></li>
									{% endif %}
								  </ul>
								</li>
							  </ul>
							</li>
						</ul>
						<div class="col-logo">
							{{ position3 }}				
							<div id="logo">
							{% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /></a>{% else %}
							  <h1><a href="{{ home }}">{{ name }}</a></h1>
							  {% endif %}
							</div>
						</div>
						
						
						<div class="col-cart">
							<div class="inner">
								<a href="{{ compare }}" class="compare-header" ></a>
								<a href="{{ wishlist }}" id="wishlist-total" ><span>{{ text_wishlist }}</span></a>
								{% if header_cart %}{{ cart }}{% endif %}
							</div>
						</div>
					</div>
					<div class="col-search">
						{{ search }}
					</div>
				</div>
			</div>
		</div>
		<div class="header-bottom">
			<div class="container">
				<div class="inner">
					{{ position2 }}
					<div class="header-phone">
						<div class="inner">
							<div class="inner-inner">
								<p>{{ text_call_us }}</p>
								<span>{{ telephone }}</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>
</div>